{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
      {
        "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
        "parserOptions": {
          "project": ["./tsconfig.json"],
          "ecmaFeatures": {
            "jsx": true
          }
        }
      },
      {
        "files": ["*.ts", "*.tsx"],
        "rules": {
            "react/jsx-uses-react": "off",
            "react/react-in-jsx-scope": "off"
        }
      },
      {
        "files": ["*.js", "*.jsx"],
        "rules": {}
      }
    ]
  }
  
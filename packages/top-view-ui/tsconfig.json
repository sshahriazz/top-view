{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node",
            "jest"
        ],
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "target": "es6",
        "module": "esnext",
        "typeRoots": [
            "../../node_modules/@types",
            "./typings"
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        "next-env.d.ts"
    ],
    "exclude": [
        "node_modules",
        "storybook-static",
        "dist",
        "lib"
    ]
}
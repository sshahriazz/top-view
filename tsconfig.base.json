{
    "compilerOptions": {
      "rootDir": ".",
      "paths": {},
      "strictNullChecks": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "allowJs": true,
      "target": "es6",
      "jsx": "preserve",
      "lib": [
        "dom",
        "es2017"
      ],
      "skipLibCheck": true,
      "noEmit": true,
      "module": "esnext",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "typeRoots": [
        "./node_modules/@types",
        "./typings"
      ]
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "**/*.js",
      "**/*.jsx"
    ]
  }